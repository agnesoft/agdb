  "components": {
    "schemas": {
      "ChangePassword": {
        "type": "object",
        "required": [
          "name",
          "password",
          "new_password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "new_password": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "DbType": {
        "type": "string",
        "enum": [
          "memory",
          "mapped",
          "file"
        ]
      },
      "ServerDatabase": {
        "type": "object",
        "required": [
          "name",
          "db_type"
        ],
        "properties": {
          "db_type": {
            "$ref": "#/components/schemas/DbType"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "ServerDatabaseName": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "UserCredentials": {
        "type": "object",
        "required": [
          "name",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
