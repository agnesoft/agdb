{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "clippy",
      "args": ["--workspace", "--all-targets", "--all-features", "--", "-D", "warnings"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Clippy"
    },
    {
      "label": "Coverage Db",
      "type": "cargo",
      "command": "llvm-cov",
      "args": ["--package", "agdb", "--all-features", "--ignore-filename-regex", "agdb_", "--show-missing-lines", "--hide-instantiations"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Db HTML",
      "type": "cargo",
      "command": "llvm-cov",
      "args": ["--package", "agdb", "--all-features", "--ignore-filename-regex", "agdb_", "--html", "--open", "--hide-instantiations"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Server",
      "type": "cargo",
      "command": "llvm-cov",
      "args": ["--package", "agdb_server", "--all-features", "--ignore-filename-regex", "agdb(\\src|\\\\src|/src|_derive|_benchmarks)|api.rs", "--show-missing-lines", "--hide-instantiations"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Server HTML",
      "type": "cargo",
      "command": "llvm-cov",
      "args": ["--package", "agdb_server", "--all-features", "--ignore-filename-regex", "agdb(\\src|\\\\src|/src|_derive|_benchmarks)|api.rs", "--html", "--open", "--hide-instantiations"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Format",
      "type": "cargo",
      "command": "fmt",
      "args": ["--all"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Format Check",
      "type": "cargo",
      "command": "fmt",
      "args": ["--all", "--check"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    }
  ]
}
