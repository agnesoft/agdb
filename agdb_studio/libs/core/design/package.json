{
  "name": "@agdb-studio/design",
  "version": "1.0.0",
  "description": "Design library for AGDB Studio",
  "type": "module",
  "scripts": {
    "build-only": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "echo \"No tests yet\" && exit 0",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint --max-warnings=0 . --fix",
    "lint:check": "eslint --max-warnings=0 .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "before-commit": "pnpm run format && pnpm run lint && pnpm run test && pnpm run test:e2e"
  },
  "dependencies": {
    "vue": "catalog:"
  },
  "devDependencies": {
    "@agdb-studio/tsconfig": "workspace:*",
    "@agdb-studio/testing": "workspace:*",
    "vite": "catalog:",
    "vue-tsc": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:"
  }
}
