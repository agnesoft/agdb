{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clippy",
      "type": "process",
      "command": "cargo",
      "args": ["clippy", "--workspace", "--all-targets", "--all-features", "--", "-D", "warnings"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Db",
      "type": "process",
      "command": "cargo",
      "args": ["llvm-cov", "--package", "agdb", "--all-features", "--ignore-filename-regex", "agdb_", "--show-missing-lines"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Db HTML",
      "type": "process",
      "command": "cargo",
      "args": ["llvm-cov", "--package", "agdb", "--all-features", "--ignore-filename-regex", "agdb_", "--html", "--open"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Server",
      "type": "shell",
      "command": "bash",
      "args": [
          "-c",
          "cargo llvm-cov clean --workspace && cargo llvm-cov -p agdb_server --all-features --ignore-filename-regex \"agdb(.|..)src|agdb_derive|agdb_api|api.rs\" --show-missing-lines"
      ],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Server HTML",
      "type": "shell",
      "command": "bash",
      "args": [
          "-c",
          "cargo llvm-cov clean --workspace && cargo llvm-cov -p agdb_server --all-features --ignore-filename-regex \"agdb(.|..)src|agdb_derive|agdb_api|api.rs\" --html --open"
      ],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Api",
      "type": "process",
      "command": "cargo",
      "args": ["llvm-cov", "--package", "agdb_api", "--package", "agdb_server", "--all-features", "--ignore-filename-regex", "agdb(.|..)src|agdb_server|agdb_derive", "--show-missing-lines"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage Api HTML",
      "type": "process",
      "command": "cargo",
      "args": ["llvm-cov", "--package", "agdb_api", "--package", "agdb_server", "--all-features", "--ignore-filename-regex", "agdb(.|..)src|agdb_server|agdb_derive", "--html", "--open"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage CI",
      "type": "process",
      "command": "cargo",
      "args": ["llvm-cov", "--package", "agdb_ci", "--all-features", "--show-missing-lines"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Coverage CI HTML",
      "type": "process",
      "command": "cargo",
      "args": ["llvm-cov", "--package", "agdb_ci", "--all-features", "--html", "--open"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Format",
      "type": "process",
      "command": "cargo",
      "args": ["fmt", "--all"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Format Check",
      "type": "process",
      "command": "cargo",
      "args": ["fmt", "--all", "--check"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    }
  ]
}
