{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "format": {
            "dependsOn": ["^format"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "type-check": {
            "dependsOn": ["^type-check"]
        },
        "test:e2e": {
            "dependsOn": ["^test:e2e"]
        },
        "before-commit": {
            "dependsOn": ["^before-commit"]
        }
    }
}
