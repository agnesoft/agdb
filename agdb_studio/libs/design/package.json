{
  "name": "@agdb-studio/design",
  "version": "1.0.0",
  "description": "Notification library for AGDB Studio",
  "type": "module",
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "echo \"No tests yet\" && exit 0",
    "test:e2e": "playwright test",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint --max-warnings=0 . --fix",
    "lint:check": "eslint --max-warnings=0 .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "before-commit": "npm run format && npm run lint && npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@vueuse/core": "catalog:",
    "vue": "catalog:",
    "@kalimahapps/vue-icons": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "catalog:",
    "@rushstack/eslint-patch": "catalog:",
    "@tsconfig/node18": "catalog:",
    "@types/jsdom": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "@vue/eslint-config-prettier": "catalog:",
    "@vue/eslint-config-typescript": "catalog:",
    "@vue/test-utils": "catalog:",
    "@vue/tsconfig": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "jsdom": "catalog:",
    "less": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:",
    "@agdb-studio/config": "workspace:*"
  }
}
