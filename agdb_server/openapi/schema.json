{
  "openapi": "3.0.3",
  "info": {
    "title": "agdb_server",
    "description": "",
    "license": {
      "name": "Apache-2.0"
    },
    "version": "0.1.0"
  },
  "paths": {
    "/create_db": {
      "post": {
        "tags": [
          "crate::app"
        ],
        "operationId": "create_db",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Database created"
          },
          "403": {
            "description": "Database exists"
          },
          "461": {
            "description": "Invalid database name"
          }
        }
      }
    },
    "/create_user": {
      "post": {
        "tags": [
          "crate::app"
        ],
        "operationId": "create_user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "461": {
            "description": "Name too short (<3)"
          },
          "462": {
            "description": "Password too short (<8)"
          },
          "463": {
            "description": "User already exists"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "crate::app"
        ],
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCredentials"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserToken"
                }
              }
            }
          },
          "401": {
            "description": "Bad password"
          },
          "403": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateDb": {
        "type": "object",
        "required": [
          "name",
          "db_type"
        ],
        "properties": {
          "db_type": {
            "$ref": "#/components/schemas/DbType"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "DbType": {
        "type": "string",
        "enum": [
          "file",
          "mapped",
          "memory"
        ]
      },
      "UserCredentials": {
        "type": "object",
        "required": [
          "name",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserToken": {
        "type": "string"
      }
    }
  }
}