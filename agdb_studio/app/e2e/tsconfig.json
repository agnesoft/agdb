{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["./**/*"],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
